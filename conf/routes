# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /test                       controllers.Application.test
POST    /testDB                     controllers.Application.testDB
GET     /testJ                      @controllers.ApplicationJava.index1()

POST    /auth/login                 @controllers.ApplicationJava.login()
POST    /auth/customer/register     @controllers.ApplicationJava.register()
POST    /auth/sp/register           @controllers.ApplicationJava.spRegister()

GET     /history                    @controllers.ApplicationJava.history(user_id: String ?="")

GET     /user/status                @controllers.ApplicationJava.status(user_id: String ?="")
GET     /sp/status                  @controllers.ApplicationJava.spStatus(user_id: String ?="")
POST    /customer/request           @controllers.ApplicationJava.sendrequest()
GET     /customer/bids              @controllers.ApplicationJava.getBids(user_id: String ?="")
POST    /customer/select_bid        @controllers.ApplicationJava.chooseBid()
GET     /customer/service           @controllers.ApplicationJava.getService(user_id: String ?="")
POST    /customer/pay               @controllers.ApplicationJava.sendPayment()
POST    /sp/bid                     @controllers.ApplicationJava.sendBid()
POST    /sp/finish                  @controllers.ApplicationJava.endService()
GET     /sp/requests                @controllers.ApplicationJava.getRequest(user_id: String ?="")
GET     /sp/check_bid               @controllers.ApplicationJava.getBidStatus(user_id: String ?="", request_id: String ?="")
POST    /lock/status                @controllers.ApplicationJava.getBidStatus()
POST    /lock/location              @controllers.ApplicationJava.getBidStatus()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
